{
  "name": "firefox extensions template",
  "description": "<The description of the application>",
  "default_locale": "en",
  "version": "1.0.0",
  "manifest_version": 2,
  "permissions": [
    "http://localhost:3000/*",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "./dist/content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "src/component/placasView.html"
  ]
}